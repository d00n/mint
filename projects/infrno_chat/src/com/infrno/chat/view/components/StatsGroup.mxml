<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
				 xmlns:s="library://ns.adobe.com/flex/spark" 
				 xmlns:mx="library://ns.adobe.com/flex/mx"		
				 xmlns:MyComp="com.infrno.chat.view.components.*"
				 resize="statsGroup_resizeHandler(event)"
				 >
	<fx:Script>
		<![CDATA[			
			import mx.events.FlexEvent;
			import mx.events.ResizeEvent;
			
			protected function statsGroup_resizeHandler(event:ResizeEvent):void	{
				statsBlock_list.width = this.width;
				statsBlock_list.height = this.height;
			}
		]]>
	</fx:Script>
	
	<s:List id="statsBlock_list" 

					itemRenderer="spark.skins.spark.DefaultComplexItemRenderer"
					horizontalCenter="0"
					verticalCenter="0"
					>
		
		<s:layout>
			<s:VerticalLayout gap="0"/>
		</s:layout>
		
		<MyComp:ServerStatsBlock id="serverStatsBlock"/>
		
		<s:dataProvider >
			<s:ArrayList>
			</s:ArrayList>
		</s:dataProvider>
		
	</s:List>
	
</s:Group>
